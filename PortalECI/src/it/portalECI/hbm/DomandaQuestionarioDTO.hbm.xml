<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.portalECI.DTO.DomandaQuestionarioDTO" table="DOMANDA_QUESTIONARIO">
		<id name="id">
			<generator class="identity"></generator>
		</id>
		
		<property name="testo">
			<column name="testo" length="1024"/>
		</property> 
		<property name="obbligatoria" type="boolean" >
			<column name="obbligatoria" />
		</property>
		<property name="placeholder">
			<column name="placeholder" length="256"/>
		</property> 
		
		<one-to-one name="risposta" class="it.portalECI.DTO.RispostaQuestionario" cascade="all" constrained="true"></one-to-one>
		<many-to-one name="questionario" class="it.portalECI.DTO.QuestionarioDTO">
            <column name="questionario_id" not-null="true" />
        </many-to-one>
	</class>
</hibernate-mapping> 