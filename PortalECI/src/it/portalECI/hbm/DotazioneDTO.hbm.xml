<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="it.portalECI.DTO.DotazioneDTO" table="dotazione">
       
        <id name="id" type="int">
            <column name="id" />
            <generator class="increment" />
        </id>
        <many-to-one name="company" class="it.portalECI.DTO.CompanyDTO" fetch="join" lazy="false">
            <column name="company_id" />
        </many-to-one>
        <property name="marca" type="java.lang.String">
            <column name="marca" />
        </property>
        <property name="modello" type="java.lang.String">
            <column name="modello" />
        </property>
      

 		<many-to-one name="tipologia" class="it.portalECI.DTO.TipologiaDotazioniDTO" fetch="join" lazy="false">
            <column name="tipologia_id" />
        </many-to-one>
 		
 		 <property name="matricola" type="java.lang.String">
            <column name="matricola" />
        </property>
        
        <property name="targa" type="java.lang.String">
       		 <column name="targa" />
        </property>

    	   <set name="listaPrenotazioni" table="prenotazioni_dotazioni" inverse="true" lazy="false" fetch="select" >
            <key>
                <column name="dotazione_id" not-null="true" />
            </key>
            <one-to-many class="it.portalECI.DTO.PrenotazioniDotazioneDTO" />
   		</set>
   		
   		<property name="schedaTecnica" type="java.lang.String">
            <column name="scheda_tecnica" />
        </property>
   		
   		
        
    </class>
</hibernate-mapping>
